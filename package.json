{
  "name": "raspi-sensor-swipe-mock",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "front-dev": "vite",
    "front-build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "server-dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn server/app.ts",
    "server-build": "cross-env NODE_ENV=production tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json",
    "build": "yarn front-build && yarn server-build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "rpi-gpio": "^2.1.7",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "vue": "^3.3.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.8",
    "@types/rpi-gpio": "^2.1.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@volar/vue-language-plugin-pug": "^1.6.5",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "pug": "^3.0.2",
    "sass": "^1.63.2",
    "stylus": "^0.59.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vue-tsc": "^1.6.4"
  }
}
